(* Abelian group structure: one commutative, associative law, with a neutral
   element and an opposite for each element in the group.
   The group is not trivial since we have a One constant generator. *)

type t = private
   | Zero
   | One
   | Opp of t
   | Add of t * t
   begin
     associative
     commutative
     neutral (Zero)
     opposite (Opp)
   end
;;
