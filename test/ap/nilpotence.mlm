(* $Id: nilpotence.mlm,v 1.4 2008-01-11 08:04:06 blanqui Exp $ *)

(* A relational type with two kinds of nilpotence. *)

type t = private
  | Zero
      begin
	precedence 0
      end
  | One
      begin
	precedence 1
      end
  | Nprod of t * t
  begin
    nilpotent (Zero)
    precedence 3
  end
  | Proj of t
  begin
    nilpotent (One)
    precedence 2
  end
;;
