(* $Id: nilpotence_list.mlm,v 1.2 2008-02-13 23:06:26 weis Exp $ *)

(* A relational type with two kinds of nilpotence. *)

type t = private
  | Zero
      begin
	completion precedence 0
      end
  | One
      begin
	completion precedence 1
      end
  | Nprod of t list
  begin
    nilpotent (Zero)
    completion precedence 3
  end
  | Proj of t
  begin
    nilpotent (One)
    completion precedence 2
  end
;;
