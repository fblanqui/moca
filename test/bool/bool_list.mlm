(* Booleans with varyadic constructors and common algebraic properties. *)

type t = private
   | Btrue
   | Bfalse
   | Bvar of string
   | Bnot of t
     begin
       distributive (Btrue, Bfalse)
       distributive (Bfalse, Btrue)
     end

   | Band of t list
     begin
       associative
       commutative
       idempotent
       neutral (Btrue)
       absorbent (Bfalse)
     end

   | Bor of t list
     begin
       associative
       commutative
       idempotent
       neutral (Bfalse)
       absorbent (Btrue)
     end
;;
