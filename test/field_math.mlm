(* $Id: field_math.mlm,v 1.7 2012-06-04 13:01:22 weis Exp $ *)

(* Field structure according to the mathematical definition. *)

type field = private
   | FZero
   | FOne
   | FOpp of field
   | FInv of field
(*
     This rule is now generated by the compiler.
     begin
       rule FInv (FOpp x) -> FOpp (FInv x)
     end
*)
   | FAdd of field * field
     begin
       associative
       commutative
       neutral (FZero)
       opposite (FOpp)
     end
   | FMul of field * field
     begin
(*
     These rules are now generated by the compiler.
       rule FMul (FOpp x, y) -> FOpp (FMul (x, y))
       rule FMul (x, FOpp y) -> FOpp (FMul (x, y))
*)
       associative
       commutative
       neutral (FOne)
       absorbent (FZero)
       distributive (FAdd)
       inverse (FInv)
     end

;;
