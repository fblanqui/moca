(* Booleans defined using xor. *)

type t = private
  | Btrue
  | Bfalse
  | Bvar of string
  | Bnot of t
  begin
    rule Bnot (x) -> Bxor (x, Btrue)
  end

  | Band of t * t
  begin
    associative
    commutative
    idempotent
    neutral (Btrue)
    absorbent (Bfalse)
    distributive (Bxor)
  end

  | Bxor of t * t
  begin
    associative
    commutative
    neutral (Bfalse)
    nilpotent (Bfalse)
  end

  | Bor of t * t
  begin
    rule Bor (x, y) -> Bxor (Bxor (x, y), Band (x, y))
  end

  | Bimply of t * t
  begin
    rule Bimply(x,y) -> Bor (Bnot x, y)
  end

  | Bequiv of t * t
  begin
    rule Bequiv(x,y) -> Band (Bimply (x, y), Bimply (y, x))
  end
;;
