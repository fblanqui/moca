(* Defining a ring structure with variables. *)

(* ((x * y ) + z) * x -> xxy + xz *)
type t = private
   | Zero
   | One

   | Opp of t
   | Var of string

   | Add of t list
   begin
     associative
     commutative
     neutral (Zero)
     opposite (Opp)
   end

   | Mul of t list
   begin
     associative
     commutative
     neutral (One)
     absorbent (Zero)
     distributive (Add)
     distributive inverse (Opp)
   end
;;
