(* Implantation of:
P. Arrighi and G. Dowek, Linear-algebraic lambda-calculus.
http://www.lix.polytechnique.fr/~dowek/Publi/qpl.ps.gz

This is a commutative semi-ring. *)

type field = private
   | KZero
   | KOne
   | KAdd of field list
     begin
       associative
       commutative
       neutral (KZero)
     end
   | KProd of field list
     begin
       associative
       commutative
       neutral (KOne)
       absorbent (KZero)
       distributive (KAdd)
     end
;;
