(* Defining the molecules for the biocham system.
   We need sets and associative commutative operators. *)

type 'a set = private
   | Empty
   | Singleton of 'a
   | Union of ('a set) list
     begin
       associative
       neutral (Empty)
       commutative
       idempotent
     end
;;

type molecule = private
   | Name of string
   | Phospho of molecule * molecule set
   | Complex of molecule list
     begin
       associative
       commutative
     end
   | Ph of molecule list
     begin
       associative
       commutative
     end
;;
