(* Booleans with common algebraic properties. *)

type t = private
   | Btrue
   | Bfalse
   | Bvar of string
   | Bnot of t
     begin
       distributive (Btrue, Bfalse)
       distributive (Bfalse, Btrue)
     end

   | Band of t * t
     begin
       associative
       commutative
       idempotent
       neutral (Btrue)
       absorbent (Bfalse)
       (*inverse (Bnot, Bfalse)*)
     end

   | Bor of t * t
     begin
       associative
       commutative
       idempotent
       neutral (Bfalse)
       absorbent (Btrue)
       (*inverse (Bnot, Btrue)*)
     end
;;
