(* Group Gr(a) freely generated by type argument 'a. *)
(* The precedence which allows completion is 
   opp > mult > gen > unit
*)

type 'a t = private
  | Unit
      begin
        completion precedence 10
      end
  | Gen of 'a
      begin
        completion precedence 20
      end
  | Opp of 'a t
      begin
        completion precedence 40
      end
  | Mult of 'a t * 'a t
      begin
        completion precedence 30
        associative
        neutral left (Unit)
        opposite left (Opp)
      end
;;
