(* Ring Z[a] freely generated by type a *)

type 'a t = private
  | Zero
  | One
  | Gen of 'a
  | Opp of 'a t
  | Add of 'a t * 'a t
    begin
      associative
      commutative
      neutral (Zero)
      opposite (Opp)
    end
  | Mul of 'a t * 'a t
    begin
      associative
      commutative
      neutral (One)
      absorbent (Zero)
      distributive (Add)
      distributive inverse (Opp)
    end
;;
