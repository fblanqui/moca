(* Calculus of structures. *)

type t = private
   | Strue
   | Sfalse
   | Atom of string

   | Sbrack of t * t (* Equivalent of or *)     
   begin
     associative
     commutative
     neutral (Sfalse)
     absorbent (Strue)
     inverse (Sneg, Strue)
   end

   | Sparen of t * t (* Equivalent of and *)
    begin
      associative
      commutative
      neutral (Strue)
      absorbent (Sfalse)
    end

   | Sneg of t
   begin
     involutive
     (*unary*) distributive (Sparen, Sbrack)
     (*unary*) distributive (Sbrack, Sparen)
   end
;;
