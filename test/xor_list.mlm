(* $Id: xor_list.mlm,v 1.5 2012-06-04 13:01:22 weis Exp $ *)

(* Varyadic booleans defined using xor. *)

type t = private
  | Btrue
  | Bfalse
  | Bvar of string
  | Bnot of t
    begin
      rule Bnot (x) -> Bxor [x; Btrue]
    end
  | Bimply of t * t
    begin
      rule Bimply (x, y) -> Bor [Bnot x; y]
    end

  | Bequiv of t * t
    begin
      rule Bequiv (x, y) -> Band [Bimply (x, y); Bimply (y, x)]
    end

  | Band of t list
    begin
      associative
      commutative
      idempotent
      neutral (Btrue)
      absorbent (Bfalse)
      distributive (Bxor)
    end

  | Bxor of t list
    begin
      associative
      commutative
      neutral (Bfalse)
      nilpotent (Bfalse)
    end

  | Bor of t list
    begin
      rule Bor (x :: y :: l) -> Bor (Bxor [Bxor [x; y]; Band [x; y]] :: l)
    end
;;
